@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Sistema Fluxo de Caixa</h1>
    <hr>
    <div class="flex" >
        <div class="div-inline-block">
            <b> Valor Total 
            <br>
            R$ 1.000,00 
            </b>
        </div>
        <div class="div-inline-block">
            <b>Receitas
            <br>
            R$ 500,00</b>
        </div>
        <div class="div-inline-block despesas">
            <b>Despesas
            <br>
            R$ 500,00</b>
        </div>
    </div>
    
    <div class="pesquisa">
        <div class="div-inline-block-pesquisa input-adicionar input button">
            <form action="/" class="block">
                <input name="tipo" type="text" placeholder="Pesquisar...."></input>
                <button class="btn btn-primary" >Buscar</button>
            </form>
        </div>
        <div class="div-inline-block-pesquisa btn-adicionar">
            <a href="#" class="btn btn-primary">Adicionar
            </a>    
        </div>
    </div>

    <table class="table tabela">
        <thead>
            <tr>
                <th>TIPO</th>
                <th>VALOR</th>
                <th>STATUS</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @* buscando  34,56 *@
            @foreach (var item in ViewBag.lista)
            {
            <tr>
                <td>@item.Tipo</td>
                <td>R$ @item.Valor</td>
                <td>@item.Status</td>
                <td><div class="despesa-legenda"></div></td>
            </tr>
            }
        </tbody>
    </table>   
</div>
